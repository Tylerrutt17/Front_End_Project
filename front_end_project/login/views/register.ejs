            />
            <link rel="stylesheet" type="text/css" href="css/register.css" />
            <title>Document</title>
            </head>
                
              <body>
                <a href="/login"> back to login</a>
                <div class="signupcontainer">
                  <div class="left">
                    <h1>Go Beyond!</h1>
                    <h2>Plus Ultra!</h2>
                    <button class="hype">Get Hyped</button>
                  </div>
                  <div class="right">
                    <h1 class="title">Create a new account</h1>
                    <div class="whiteblock"></div>
                    <form class="inputs" action="/register" method="POST">
                      <h2>Get all the latest updates</h2>
                      
                      <input
                        type="text"
                        name="name"
                        id="name"
                        placeholder="name" 
                        required
                      />
                      <input 
                        type="email" 
                        name="email" id="email" 
                        placeholder="email" 
                        required 
                        />
                      <input
                        type="password"
                        name="password"
                        id="password"
                        placeholder="password"
                        required
                      />
                      
                      <div class="news">
                        <div>
                          <input type="checkbox" id="Newsletter" />
                          <label for="Newsletter">Receive Newsletter</label>
                        </div>
                        <button class="signmeup" type="submit">Sign Me Up!</button>
                          
                      </div>

                    </form>
                    <a href="/login">Login</a>
                  </div>
                </div>
              </body>

